{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/js/*"],
      "@components/*": ["./frontend/js/components/*"],
      "@lib/*": ["./frontend/js/lib/*"]
    },
    "types": ["vite/client"],

  },
  "include": [
    "frontend/**/*.ts",
    "frontend/**/*.tsx",
    "frontend/**/*.vue",
    "./**/.vue-plugins/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}